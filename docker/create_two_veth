# https://dzone.com/articles/step-by-step-guide-establishing-container-networki
ip netns add docker0
ip netns add docker1
ip link add veth0 type veth peer name veth1
ip link add veth2 type veth peer name veth3
ip link set veth0 netns docker0
ip link set veth2 netns docker1
brctl addbr br0
brctl addif br0 veth1
brctl addif br0 veth3
ip netns exec docker0 ip addr add 172.12.0.10/24 dev veth0
ip netns exec docker1 ip addr add 172.12.0.12/24 dev veth2
ip netns exec docker0 ip link set veth0 up
ip netns exec docker1 ip link set veth2 up
ip link set veth1 up
ip link set veth3 up
ip addr add 172.12.0.11/24 dev br0
ip link set br0 up
